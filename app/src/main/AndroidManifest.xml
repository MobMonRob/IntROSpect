<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.joostvanstuijvenberg.introspect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_introspect"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_introspect_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MasterListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MasterNewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MasterScanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MasterDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NodeListActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NodeDetailsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TopicListActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TopicDetailsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ServiceListActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ServiceDetailsActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>